<div class="container">
  
  <div class="jumbotron">

		<div class="row">							
			<%= image_tag @article.image.url(:large), :class => "img-responsive" %>
      <h3><strong><%= @article.title %><strong></h3>
      <p><strong><%= @article.subtitle %></strong></p>
      <p><%= @article.text %></p>
    </div>

    <div class="row">
    	<h3><strong>Comments<strong></h3>
    	<p><%= render @article.comments %></p>
    	<%= render 'comments/form' %>
    </div>
  	
  	<%= link_to 'Back, even though intro screen weirdly takes forever to load', root_path %>

    <% if @article.user == current_user %>   
      <%= link_to 'Edit', edit_article_path(@article) %> 
      |
      <%= link_to 'Delete', @article, method: :delete, data: { confirm: 'Are you sure?' } %>
      |
      <div class="btn btn-embossed btn-danger"><%= link_to "New Article", new_article_path  %></div>

    <% end %>

  </div>

</div>
 
