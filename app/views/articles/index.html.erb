<div class="container">
    <% @articles.each do |article| %>
        <div class="row">
                <div class="col-sm-6 wow pull-right fadeInRightBig polaroid">
                    <%= image_tag article.image.url(:medium), :class => "img-responsive, center-block" %>
                </div>
                <div class="col-sm-6 wow fadeInLeftBig"  data-animation-delay="200">   
                    <h2 class="h2_home wow fadeIn"><%= article.title %></h2>
                    <div class="sub-title lead3"><%= article.subtitle %></div>
                    <p class="lead"><%=h truncate(article.text, :length => 200) %></p>
                    <div class="btn btn-embossed btn-warning"> <%= link_to 'Read more', article_path(article) %></div>
                    
                    <% if article.user == current_user %> 
                        <h2> Erin is signed in </h2> 
                        <div class="btn btn-embossed btn-danger"> 
                            <%= link_to 'Edit', edit_article_path(article) %>
                        </div>
                        <div class="btn btn-embossed btn-warning"> 
                            <%= link_to 'Delete', article_path(article),
                                method: :delete,
                                data: { confirm: 'Are you sure?' } %> 
                        </div>
                        <div class="btn btn-embossed btn-info"><%= link_to "New Article", new_article_path  %></div>
                    <% end %>

                </div>
            </div>
        <hr>
        <hr>
    <% end %>
</div>
